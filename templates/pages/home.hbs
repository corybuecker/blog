<article>
    <h1>{{title}}</h1>
    <time datetime="{{published_at}}">{{published_at}}</time>
    {{#if revised_at}}
        (revised on
        <time datetime="{{revised_at}}">{{revised_at}}</time>)
    {{/if}}
{{{content}}}
</article>
<h2 class="text-2xl">Older posts</h2>
<ul>
    {{#each pages}}
        <li>
            <a
                class="underline hover:no-underline"
                href="/post/{{slug}}"
            >{{title}}</a>
        </li>
    {{/each}}
</ul>